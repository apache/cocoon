<?xml version="1.0"?>
<xlog xpath="/logkit/targets" unless="cocoon[@id='cron']">
    <!-- The logger for the cron components -->
    <cocoon id="cron">
        <filename>${context-root}/WEB-INF/logs/cron.log</filename>
        <format type="cocoon">
            %7.7{priority} %{time}   [%{category}] %{thread}/%{class:short}: %{message}\n%{throwable}
        </format>
        <append>true</append>
    </cocoon>
</xlog>
