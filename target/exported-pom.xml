<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.cocoon</groupId>
  <artifactId>deployer-maven-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <name>Cocoon block deployer - Maven 2 plugin</name>
  <version>1.0-SNAPSHOT</version>
  <url>http://cocoon.apache.org</url>
  <developers>
    <developer>
      <name>Reinhard Poetz</name>
      <email>reinhard@apache.org</email>
      <roles>
        <role>committer</role>
      </roles>
    </developer>
  </developers>
  <build>
    <sourceDirectory>F:\os\cocoon\whiteboard\deployer-maven-plugin\src\main\java</sourceDirectory>
    <scriptSourceDirectory>src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>F:\os\cocoon\whiteboard\deployer-maven-plugin\src\test\java</testSourceDirectory>
    <outputDirectory>F:\os\cocoon\whiteboard\deployer-maven-plugin\target\classes</outputDirectory>
    <testOutputDirectory>F:\os\cocoon\whiteboard\deployer-maven-plugin\target\test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>F:\os\cocoon\whiteboard\deployer-maven-plugin\src\main\resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>F:\os\cocoon\whiteboard\deployer-maven-plugin\src\test\resources</directory>
      </testResource>
    </testResources>
    <directory>F:\os\cocoon\whiteboard\deployer-maven-plugin\target</directory>
    <finalName>deployer-maven-plugin-1.0-SNAPSHOT</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.1-SNAPSHOT</version>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.0</version>
      </plugin>
      <plugin>
        <artifactId>maven-plugin-plugin</artifactId>
        <version>2.0.1-SNAPSHOT</version>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.1</version>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.1-SNAPSHOT</version>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Maven Repository Switchboard</name>
      <url>http://repo1.maven.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Maven Plugin Repository</name>
      <url>http://repo1.maven.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
      <version>2.0.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.0.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.cocoon</groupId>
      <artifactId>cocoon-block-deployer</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-model</artifactId>
      <version>2.0.1</version>
