<?xml version="1.0"?>

<cocoon version="2.0">

  <configuration>

    <producerFactory name="file" class="org.apache.cocoon.producers.DefaultProducerFactory">
      <parameter name="className" value="org.apache.cocoon.producers.FileProducer"/>
    </producerFactory>

    <serializerFactory name="xml" class="org.apache.cocoon.serializers.XercesSerializerFactory">
      <parameter name="outputMethod" value="xml"/>
    </serializerFactory>

    <serializerFactory name="html" class="org.apache.cocoon.serializers.XercesSerializerFactory">
      <parameter name="outputMethod" value="html"/>
    </serializerFactory>

  </configuration>

  <sitemap>
    <partition>
      <process match="**.html" source="c:\\java\\servlets\\cocoon\\data\\**.xml">
        <producer name="file"/>
        <serializer name="html"/>
      </process>
    </partition>
  </sitemap>
</cocoon>