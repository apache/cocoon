<?xml version="1.0"?>

<cocoon version="2.0">
  <component  role="parser"     class="org.apache.cocoon.components.parser.XercesParser"/>
  <generator  name="generator"  class="org.apache.cocoon.components.parser.XercesParser"/>
  <filter     name="filter"     class="org.apache.cocoon.components.parser.XercesParser"/>
  <component  role="serializer" class="org.apache.cocoon.serializers.XMLSerializer"/>
  
  <sitemap>
    <partition>
      <process uri="*.jpg" source="*.jpg">
        <generator name="file"/>
        <serializer name="xml"/>
      </process>
    </partition>
  </sitemap>
</cocoon>