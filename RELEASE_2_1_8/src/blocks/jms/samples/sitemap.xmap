<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">
 <map:pipelines>
  <map:pipeline>

    <!--+
        | Mount everything else by calling the sitemap.xmap file located
        | in the requested folder.
        +-->
    <map:match pattern="*/**">
      <map:mount check-reload="yes" src="{1}/" uri-prefix="{1}"/>
    </map:match>

  </map:pipeline>
 </map:pipelines>
</map:sitemap>
