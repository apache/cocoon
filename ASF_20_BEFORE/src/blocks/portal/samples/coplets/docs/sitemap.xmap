<?xml version="1.0"?>

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

<map:pipelines>
    
  <map:pipeline>	

    <map:match pattern="*.html">
        <map:generate type="file" src="{1}.xml" label="content" />
        <map:transform type="xslt" src="styles/document2html.xsl"/>
        <map:serialize type="html"/>
    </map:match>

  </map:pipeline>

</map:pipelines>

</map:sitemap>
