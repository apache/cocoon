<?xml version="1.0"?>
<root xmlns:jx="http://apache.org/cocoon/templates/jx/1.0">
	<jx:macro name="d">
		<jx:parameter name="p"/>
		<macroTest a="${p}">
			<jx:evalBody/>
		</macroTest>
	</jx:macro>
	<m>
		<d p="foo">
			<content b="${1+2}"/>
		</d>
	</m>
	<n>
		<jx:set var="macroName" value="d"/>
		<jx:call macro="${macroName}">
			<jx:withParam name="p" value="bar"/>
			<content b="${2+3}"/>
		</jx:call>
	</n>
</root>
