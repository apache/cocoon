    *******************************
    ********  COCOON CORE  ********
    *******************************
  -->

  <project name="cocoon">
    <package>org.apache.cocoon</package>

    <ant target="gump-core">
      <property name="version" value="@@DATE@@"/>
      <depend property="logkit.jar"    project="dist-avalon-logkit"/>
      <depend property="avalonapi.jar" project="avalon"/>
    </ant>

    <depend project="ant" inherit="runtime" version="supplied"/>

    <depend project="xml-xerces" version="supplied"/>
    <depend project="xml-xalan2" version="supplied"/>
    <depend project="xml-commons-resolver" version="supplied"/>

    <depend project="excalibur-compatibility" version="supplied"/>
    <depend project="excalibur-instrument" version="supplied"/>
    <depend project="excalibur-instrument-manager" version="supplied"/>
    <depend project="excalibur-naming" version="supplied"/>
    <depend project="excalibur-sourceresolve" version="supplied"/>
    <depend project="excalibur-xmlutil" version="supplied"/>
    <depend project="excalibur-store" version="supplied"/>
    <depend project="excalibur-pool" version="supplied"/>
    <depend project="excalibur-datasource" version="supplied"/>
    <depend project="excalibur-component" version="supplied"/>
    <depend project="excalibur-logger" version="supplied"/>
    <depend project="excalibur-event" version="supplied"/>

    <depend project="jakarta-regexp" version="supplied"/>
    <depend project="jakarta-servletapi-4" version="supplied"/>

    <depend project="commons-httpclient" version="supplied"/>
    <depend project="commons-collections" version="supplied"/>
    <depend project="commons-jxpath" version="supplied"/>

    <depend project="jdom" version="supplied"/>
    <depend project="castor" version="supplied"/>
    <depend project="rhino" version="supplied"/>
    <depend project="jisp" version="supplied"/>
    <depend project="jaxen" inherit="runtime"/>
    <depend project="jing"/>
    <depend project="jstyle"/>
    <depend project="pizza"/>
    <depend project="junit"/>
    <depend project="eclipse-jtd"/>

    <option project="xml-axis" version="supplied"/>

    <work nested="build/cocoon-@@DATE@@/classes"/>
    <work nested="tools/anttasks"/>
    <work nested="tools/loader"/>

    <home nested="build/cocoon-@@DATE@@"/>

    <jar name="cocoon.jar"/>

    <javadoc parent="build/cocoon-@@DATE@@/javadocs"/>

    <nag from="Gump" to="cocoon-dev@xml.apache.org">
      <regexp pattern="/BUILD FAILED/"   subject="Build Failure - Cocoon"/>
      <!--regexp pattern="/Missing prereq/" subject="Prereq failure - Cocoon"/-->
    </nag>
  </project>

