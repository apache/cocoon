<?xml version="1.0"?>

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <map:components>
    <map:generators default="file"/>
    <map:transformers default="xslt"/>
    <map:readers default="resource"/>
    <map:serializers default="html"/>
    <map:matchers default="wildcard"/>
  </map:components>

  <!-- Sitemap for handling the calculator control flow. The parent sitemap
  (defined in ../..) handles the HTML page generation -->

  <map:flow language="JavaScript">
      <map:script src="prefs.js"/>
  </map:flow>

  <map:pipelines>

    <map:pipeline>
      <map:match pattern="kont/*">
        <map:call continuation="{1}"/>
      </map:match>

      <map:match pattern="">
        <map:redirect-to uri="login/"/>
      </map:match>

      <map:match pattern="login/">
        <map:call function="login"/>
      </map:match>

      <map:match pattern="register/">
        <map:call function="registerUser"/>
      </map:match>

      <map:match pattern="edit/">
        <map:call function="edit"/>
      </map:match>

      <map:match pattern="logout/">
        <map:call function="logout"/>
      </map:match>

    </map:pipeline>

  </map:pipelines>

</map:sitemap>
