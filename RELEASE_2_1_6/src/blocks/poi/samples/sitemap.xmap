<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

 <map:components>
  <map:serializers default="html">
    <map:serializer name="xls" src="org.apache.cocoon.serialization.HSSFSerializer"/>
  </map:serializers>
