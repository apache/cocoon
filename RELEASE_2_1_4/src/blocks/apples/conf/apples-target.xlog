<?xml version="1.0"?>

<xlog xpath="/logkit/targets" 
      unless="cocoon[@id='apples']">
    
    <cocoon id="apples">
      <filename>${context-root}/WEB-INF/logs/apples.log</filename>

      <format type="cocoon">
        %7.7{priority} %{time}   [%{category}] (%{uri}) %{thread}/%{class:short}: %{message}\n%{throwable}
      </format>
      <append>false</append>
    </cocoon>
    
</xlog>
