<?xml version="1.0"?>

<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

<!-- This sitemap just forwards the request to the corresponding coplet
     sub sitemap -->
<map:pipelines>
    
  <map:pipeline>	

   <map:match pattern="*/**">
     <map:mount check-reload="yes" src="{1}/" uri-prefix="{1}"/>
   </map:match>

  </map:pipeline>

</map:pipelines>

</map:sitemap>
