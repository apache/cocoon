<!--+
    | CForms aggregate sample binding. Loads/stores values of two aggregate
    | fields as multiple parts.
    |
    | CVS $Id: binding-combine.xml,v 1.1 2004/03/09 10:34:08 reinhard Exp $
    +-->

<fb:context xmlns:fb="http://apache.org/cocoon/forms/1.0#binding"
            path="/">

  <fb:aggregate id="phone" path=".">
    <fb:value id="part1" path="part1"/>
    <fb:value id="part2" path="part2"/>
    <fb:value id="part3" path="part3"/>
    <fb:value id="part4" path="part4"/>
  </fb:aggregate>

  <fb:aggregate id="date" path=".">
    <fb:value id="day" path="day"/>
    <fb:value id="month" path="month"/>
    <fb:value id="year" path="year"/>
  </fb:aggregate>
</fb:context>
