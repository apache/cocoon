<page
  xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
  xmlns:fi="http://apache.org/cocoon/forms/1.0#instance">

    <!--
      CVS $Id$
    -->

    <!--
    TODO: Add features to "items-class" (e.g. move-up, move-down, add-before, add-after).
    -->

  <title>Form Template Editor</title>

  <content>
    <ft:form-template action="#{$continuation/id}.continue" method="POST">

      <ft:class id="id-class">
        <ft:widget-label id="id"/>:<ft:widget id="id"/>
      </ft:class>

      <ft:class id="label-class">
        <ft:widget-label id="label"/>:<ft:widget id="label"/>
      </ft:class>

      <ft:class id="output-id-class">
        <b><ft:widget-label id="id"/>:</b>
        <ft:widget id="id">
          <fi:styling type="output"/>
        </ft:widget>
      </ft:class>

      <ft:class id="output-label-class">
        <b><ft:widget-label id="label"/>:</b>
        <ft:widget id="label">
          <fi:styling type="output"/>
        </ft:widget>
      </ft:class>

      <ft:class id="std-id-class">
        <ft:choose path="../../view-selector">
          <ft:when value="fold">
            <ft:new id="output-id-class"/>
          </ft:when>
          <ft:when value="view">
            <ft:new id="output-id-class"/>
          </ft:when>
          <ft:when value="edit">
            <ft:new id="id-class"/>
          </ft:when>
        </ft:choose>
      </ft:class>

      <ft:class id="std-label-class">
        <ft:choose path="../../view-selector">
          <ft:when value="fold">
            <ft:new id="output-label-class"/>
          </ft:when>
          <ft:when value="view">
            <ft:new id="output-label-class"/>
          </ft:when>
          <ft:when value="edit">
            <ft:new id="label-class"/>
          </ft:when>
        </ft:choose>
      </ft:class>

      <ft:class id="std-items-class">
        <ft:choose path="../../view-selector">
          <ft:when value="fold">
          </ft:when>
          <ft:when value="view">
            <ft:new id="items-class"/>
          </ft:when>
          <ft:when value="edit">
            <ft:new id="items-class"/>
          </ft:when>
        </ft:choose>
      </ft:class>

      <ft:class id="std-id-items-class">
        <ft:choose path="../../view-selector">
          <ft:when value="fold">
            <ft:new id="output-id-class"/>
          </ft:when>
          <ft:when value="view">
            <ft:new id="output-id-class"/>
            <ft:new id="items-class"/>
          </ft:when>
          <ft:when value="edit">
            <ft:new id="id-class"/>
            <ft:new id="items-class"/>
          </ft:when>
        </ft:choose>
      </ft:class>

      <ft:class id="union-class">
        <ft:union id="union">

          <ft:case id="">
          </ft:case>

          <ft:case id="case">
            <ft:struct id="case">
              <ft:new id="std-id-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="class">
            <ft:struct id="class">
              <ft:new id="std-id-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="content">
            <ft:struct id="content">
              <ft:new id="std-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="default">
            <ft:struct id="default">
              <ft:new id="std-id-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="form-template">
            <ft:struct id="form-template">
              <ft:new id="std-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="input">
            <ft:struct id="input">
              <ft:new id="std-id-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="new">
            <ft:struct id="new">
              <ft:new id="std-id-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="p">
            <ft:struct id="p">
              <ft:new id="items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="page">
            <ft:struct id="page">
              <ft:new id="items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="repeater-size">
            <ft:struct id="repeater-size">
              <ft:new id="std-id-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="repeater-widget">
            <ft:struct id="repeater-widget">
              <ft:new id="std-id-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="struct">
            <ft:struct id="struct">
              <ft:new id="std-id-class"/>
              <ft:new id="std-label-class"/>
              <ft:new id="std-id-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="table">
            <ft:struct id="table">
              <ft:new id="std-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="td">
            <ft:struct id="td">
              <ft:new id="std-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="title">
            <ft:struct id="title">
              <ft:new id="std-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="tr">
            <ft:struct id="tr">
              <ft:new id="std-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="union">
            <ft:struct id="union">
              <ft:new id="std-id-items-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="widget">
            <ft:struct id="widget">
              <ft:new id="std-id-class"/>
            </ft:struct>
          </ft:case>

          <ft:case id="widget-label">
            <ft:struct id="widget-label">
              <ft:new id="std-id-class"/>
            </ft:struct>
          </ft:case>

        </ft:union>
      </ft:class>

      <ft:class id="type-selector-class">
        <ft:choose path="view-selector">
          <ft:when value="fold">
            <b>[<ft:widget id="type-selector"><fi:styling type="output"/></ft:widget>]</b>&#160;
          </ft:when>
          <ft:when value="view">
            <b>[<ft:widget id="type-selector"><fi:styling type="output"/></ft:widget>]</b>&#160;
          </ft:when>
          <ft:when value="edit">
            <ft:widget id="type-selector">
              <fi:styling list-type="dropdown" submit-on-change="true"/>
            </ft:widget>
          </ft:when>
        </ft:choose>
      </ft:class>

          <!-- DEBUG -->
          <!--
          <fi:styling list-type="dropdown" submit-on-change="true"/>
          -->
      <ft:class id="view-selector-class">
        <ft:widget id="view-selector">
          <fi:styling submit-on-change="true"/>
        </ft:widget>
      </ft:class>

      <ft:class id="items-class">
        <ft:repeater-size id="items"/>
        <ul>
          <ft:repeater-widget id="items">
            <li>
              <ft:new id="view-selector-class"/>
              <ft:new id="type-selector-class"/>
              <ft:new id="union-class"/>
            </li>
          </ft:repeater-widget>
        </ul>
        <ft:widget id="addItem"/>
        <ft:widget id="removeItems"/><br/>
      </ft:class>

      <table border="3">
        <tr>
          <td>
            <p>
              <ft:new id="items-class"/>
            </p>
           <fi:validation-errors/>
           <input type="submit"/>
          </td>
        </tr>
      </table>

    </ft:form-template>
  </content>

</page>
