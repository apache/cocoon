<document xmlns:ft="http://apache.org/cocoon/forms/1.0#template"
          xmlns:fi="http://apache.org/cocoon/forms/1.0#instance">
 <header>
  <title>JFlow example</title>
  <tab title="back" href=".."/>
 </header>
 <body>
  <row>
   <column title="OJB example">
    <ft:form-template action="#{$continuation/id}.cont" method="POST">
     <fi:group>
      <fi:styling type="fieldset" layout="columns"/>
      <fi:label>Employee</fi:label>
      <fi:items>
       <ft:widget id="name"/>
       <ft:widget id="department_id"/>
      </fi:items>
     </fi:group>
     <input type="submit"/>
    </ft:form-template>
   </column>
  </row>
 </body>
</document>
