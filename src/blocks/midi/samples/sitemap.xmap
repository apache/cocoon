<?xml version="1.0"?>
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

  <!-- =========================== Components ================================ -->
  <map:components> 
    <map:generators default="file">
      <map:generator name="xmidi" src="org.apache.cocoon.generation.XMidiGenerator" logger="midi.sitemap.generator"/>
    </map:generators>
    <map:serializers default="html">
      <map:serializer name="xmidi" src="org.apache.cocoon.serialization.XMidiSerializer" logger="midi.sitemap.serializer"/>
    </map:serializers>
    <map:matchers default="wildcard"/>
  </map:components>

<!-- =========================== Views =================================== -->
  <map:views>
    <map:view name="debug" from-label="debug">
      <map:serialize type="xml"/>
    </map:view>
    <map:view name="xml" from-label="xml">
      <map:serialize type="xml"/>
    </map:view>
  </map:views>

  <!-- =========================== Pipelines ================================= -->
  <map:pipelines> 
  
    <map:pipeline>

      <map:match pattern="">
        <map:generate src="samples.xml"/>
        <map:transform src="context://samples/common/style/xsl/html/simple-samples2html.xsl">
          <map:parameter name="contextPath" value="{request:contextPath}"/>
        </map:transform>
        <map:serialize/>
      </map:match>
      
      <map:match pattern="raw/*.mid">
      	<map:read src="midi/{1}.mid" mime-type="audio/x-midi"/>
      </map:match>

      <map:match pattern="*.mid">
      	<map:generate type="xmidi" src="midi/{1}.mid"/>
      	<map:serialize type="xmidi"/>
      </map:match>
      
      <map:match pattern="*.xmi">
      	<map:generate type="xmidi" src="midi/{1}.mid"/>
      	<map:serialize type="xml"/>
      </map:match>
      
    </map:pipeline>

  </map:pipelines> 
  
</map:sitemap>
