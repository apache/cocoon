<!-- $Id: saveuserprofile.xml,v 1.3 2004/03/06 02:25:55 antonio Exp $ 


 Description: This resource save the user profile delta to a file with the name of the user.

-->
<userdelta xmlns:source="http://apache.org/cocoon/source/1.0"
           xmlns:session="http://apache.org/cocoon/session/1.0">
    <source:insert>
    	  <source:source>profiles/userprofile-<session:getxml context="request" path="/parameter/ID"/>.xml</source:source>
        <source:path>/</source:path>
        <source:fragment><session:getxml context="request" path="/parameter/content"/></source:fragment>
        <source:replace>user-delta</source:replace>
    </source:insert>
</userdelta>
