<?xml version="1.0"?>
<!-- $Id: sunrise-deluser.xml,v 1.2 2003/05/18 11:31:26 cziegeler Exp $ 
 Description: Delete a user

-->

<adduser xmlns:source="http://apache.org/cocoon/source/1.0"
         xmlns:session="http://apache.org/cocoon/session/1.0">
	<!-- delete from authentication users -->
	<source:insert>
    		<source:source>resources/sunrise-user.xml</source:source>
    		<source:path>/authentication/users</source:path>
    		<source:fragment>
		</source:fragment>
		<source:replace>user[name='<session:getxml context="request" path="/parameter/ID"/>']</source:replace>
	</source:insert>
	<!-- delete user profile -->
	<source:insert>
		<source:source>profiles/userprofile-<session:getxml context="request" path="/parameter/ID"/>.xml</source:source>
    		<source:path>/</source:path>
    		<source:fragment><user-delta/>
		</source:fragment>
		<source:replace>user-delta</source:replace>
	</source:insert>
	<!-- delete user status profile -->
	<source:insert>
		<source:source>profiles/userstatus-<session:getxml context="request" path="/parameter/ID"/>.xml</source:source>
    		<source:path>/</source:path>
    		<source:fragment><user-delta/>
		</source:fragment>
		<source:replace>status-profile</source:replace>
	</source:insert>
</adduser>
