<html>
  <head>
    <title>#title()</title>
    <style type="text/css" media="all">
      @import url("$relativePath/css/maven-base.css");
      @import url("$relativePath/css/maven-theme.css");
      @import url("$relativePath/css/site.css");
    </style>
    <link rel="stylesheet" href="$relativePath/css/print.css" type="text/css" media="print" />
    #foreach( $author in $authors )
      <meta name="author" content="$author" />
    #end
    <meta http-equiv="Content-Type" content="text/html; charset=${outputEncoding}" />
  </head>
  <body class="composite">
    <div id="banner">
		<a href="$project.getProperties().get("docs.urlRelativizer")/" id="bannerLeft">
			<img src="$PathTool.calculateLink( "images/cocoon-project-logo.png", $relativePath )" alt="Cocoon Project Logo" />
		</a>
		<a href="$project.getProperties().get("docs.urlRelativizer")/" id="bannerRight">
			<img src="$PathTool.calculateLink( "images/cocoon-logo.gif", $relativePath )" alt="Cocoon Logo" />
		</a>
      <div class="clear">
        <hr/>
      </div>
    </div>
    <div id="breadcrumbs">
      <div id="projectName">     
      	#nameAndVersion()
     </div>
      <div class="xright">
		  <a href="$project.getProperties().get("docs.urlRelativizer")core-modules/">Cocoon Core</a> | 
		  <a href="$project.getProperties().get("docs.urlRelativizer")blocks/">Cocoon Blocks</a> |   
		  <a href="$project.getProperties().get("docs.urlRelativizer")subprojects/">Subprojects</a> |		  
		  <a href="$project.getProperties().get("docs.urlRelativizer")maven-plugins/">Maven Plugins</a>
      	  #links( $decoration.body.links )</div>
      <div class="clear">
        <hr/>
      </div>
    </div>
    <div id="leftColumn">
      <div id="navcolumn">
       #mainMenu( $decoration.body.menus )
       #poweredByLogo( $decoration.poweredBy )
      <div id="lastPublished">
	    #set ( $format = "dd/MM/yyyy" )
	    $dateFormat.applyPattern( $format )
	    #set ( $dateToday = $dateFormat.format( $currentDate ) )  
        $i18n.getString( "site-renderer", $locale, "template.lastpublished" ): $dateToday
      </div>       
      </div>
    </div>
    <div id="bodyColumn">
      <div id="contentBox">
        $bodyContent
      </div>
    </div>
    <div class="clear">
      <hr/>
    </div>
    <div id="footer">
      <div class="xright">&#169;#copyright()</div>
      <div class="clear">
        <hr/>
      </div>
    </div>
  </body>
</html>
