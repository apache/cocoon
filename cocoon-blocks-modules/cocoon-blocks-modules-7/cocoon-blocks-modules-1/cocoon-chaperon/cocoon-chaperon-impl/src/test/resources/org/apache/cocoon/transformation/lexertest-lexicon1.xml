<lexicon xmlns="http://chaperon.sourceforge.net/schema/lexicon/1.0">
 <lexeme symbol="id">
  <cclass minOccurs="1" maxOccurs="*">
   <cinterval min="A" max="Z"/>
   <cinterval min="a" max="z"/>
  </cclass>
 </lexeme>

 <lexeme symbol="number">
  <cclass minOccurs="1" maxOccurs="*">
   <cinterval min="0" max="9"/>
  </cclass>
 </lexeme>

 <lexeme symbol="mult">
  <cstring content="*"/>
 </lexeme>

 <lexeme symbol="div">
  <cstring content="/"/>
 </lexeme>

 <lexeme symbol="plus">
  <cstring content="+"/>
 </lexeme>
   
 <lexeme symbol="minus">
  <cstring content="-"/>
 </lexeme>

 <lexeme symbol="pleft">
  <cstring content="("/>
 </lexeme>

 <lexeme symbol="pright">
  <cstring content=")"/>
 </lexeme>

 <lexeme>
  <cclass minOccurs="1" maxOccurs="*">
   <cset content="&#13;&#10;&#9; "/>
  </cclass>
 </lexeme>

</lexicon>
