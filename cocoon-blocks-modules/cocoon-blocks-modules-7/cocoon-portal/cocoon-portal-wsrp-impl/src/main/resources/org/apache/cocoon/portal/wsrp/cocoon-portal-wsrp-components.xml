<!--+
    | This is the default configuration for the portal beans.
    |
    | @version $Id$
    +-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:portal="http://cocoon.apache.org/schema/portal"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
                           http://cocoon.apache.org/schema/portal http://cocoon.apache.org/schema/portal/cocoon-portal-1.0.xsd">

  <!--+
      | Default User Context Provider for WSRP.
      +-->
  <bean name="org.apache.cocoon.portal.wsrp.consumer.UserContextProvider"
        class="org.apache.cocoon.portal.wsrp.consumer.UserContextProviderImpl" scope="singleton"/>

  <!--+
      | Coplet Adapters
      |
      +-->
    <!--+
        |  This is the WSRP coplet adapter.
        +-->
    <bean name="org.apache.cocoon.portal.om.CopletAdapter.wsrp"
          class="org.apache.cocoon.portal.wsrp.adapter.WSRPAdapter"
          parent="org.apache.cocoon.portal.coplet.adapter.impl.AbstractCopletAdapter" scope="singleton">
      <property name="userContextProvider" ref="org.apache.cocoon.portal.wsrp.consumer.UserContextProvider"/>
      <property name="sourceResolver" ref="org.apache.excalibur.source.SourceResolver"/>
      <property name="serviceManager" ref="org.apache.avalon.framework.service.ServiceManager"/>
    </bean>
</beans>